<launch>
    <!-- Group to start RViz first -->
    <!-- <group> -->
        <!-- Start RViz -->
        <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find arob_mpc)/src/arob6.rviz" output="screen" required="true"/>
    </group> -->

    <!-- Start the quadrotor gazebo -->
    <include file="$(find hector_quadrotor_gazebo)/launch/quadrotor_empty_world.launch"/>

    <!-- Load the params file -->
    <rosparam file="$(find arob_mpc)/src/params.yaml" command="load" />

    <!-- Start the drone_race node -->
    <arg name="gates_file" default="gates_hard.txt"/>
    <node name="drone_race" pkg="arob_mpc" type="drone_race" output="screen" args="$(arg gates_file)"/>

    <!-- Start the mpc_node -->
    <node name="mpc_node" pkg="arob_mpc" type="mpc_custom" output="screen"/>
</launch>